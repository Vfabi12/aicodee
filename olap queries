#create dimension room
CREATE TABLE DimRoom( RoomID int auto_increment primary key, 
                     RoomType varchar(50), 
                     Max_Occupant int, 
                     No_of_beds int, 
                     Room_side varchar(50), 
                     AC varchar(1),
                     Renovation_year year 
                    );

