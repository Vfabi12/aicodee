#create dimension time
CREATE TABLE DimTime (Date date primary key, 
                      Day_of_week int, 
                      Day_of_month int,
                      Week int, 
                      Month int, 
                      Year year, 
                      Holiday varchar(1) 
                     );

#insert values in dimension time
