#create database
create database hoteldw;
use hoteldw;

#create dimension hotel
CREATE TABLE DimHotel (HotelID int auto_increment primary key, 
                       HotelName varchar(50)not null, 
                       Rooms int, 
                       HotelType varchar(50), 
                       StarRating int, 
                       Region varchar(50), 
                       City varchar(50), 
                       State varchar(50), 
                       Country varchar(50)
                      );

